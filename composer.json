{
    "name": "rawdreeg/phpswitcher",
    "description": "A simple CLI tool to manage multiple PHP versions on macOS using Homebrew. Linux and Windows support planned.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Rodrigue T",
            "email": "rawdreeg@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.0|^7.0",
        "symfony/process": "^6.0|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Rawdreeg\\PhpSwitcher\\": "src/"
        }
    },
    "bin": [
        "bin/phpswitcher"
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75"
    }
}
